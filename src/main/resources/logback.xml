<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date %-5level [%thread] - [%logger]- %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.apache.cassandra" level="INFO"/>



    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>